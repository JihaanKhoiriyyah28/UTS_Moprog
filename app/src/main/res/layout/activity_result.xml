<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/HasilNilaiAkhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Nilai Akhir"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textNIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM :" />

    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :" />

    <TextView
        android:id="@+id/textMatkul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matkul :" />

    <TextView
        android:id="@+id/textSemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester :" />

    <TextView
        android:id="@+id/textNilaiAkhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nilai Akhir :"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade :"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>
